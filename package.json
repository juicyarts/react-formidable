{
  "name": "@eppendorf/react-formidable",
  "version": "0.2.0",
  "description": "react form library",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "yarn build",
    "build": "rollup -c",
    "lint": "tsc && eslint \"./{src,tests}/**/*.{ts,tsx}\" -f stylish",
    "lint:ci": "tsc && eslint \"./{src,tests}/**/*.{ts,tsx}\" -f eslint-formatter-gitlab",
    "test": "jest --watchAll",
    "test:ci": "jest --watchAll=false --coverage",
    "start": "cd example && yarn start"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-typescript": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "@commitlint/config-conventional": "^8.3.4",
    "@eppendorf/eslint-config": "git+https://oauth2:NsWwBFY9M9ruwsBHcn7E@gitlab.dasgip.de/eppendorf/lib/eslint-config.git#semver:^0.1.1",
    "@rollup/plugin-babel": "^5.0.2",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.3",
    "@types/react-dom": "^16.9.8",
    "@types/yup": "^0.29.2",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "commitlint": "^8.3.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "7.1.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-formatter-gitlab": "^2.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-hapi": "^4.1.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "jest-junit": "^10.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.7",
    "rollup-plugin-typescript2": "^0.27.1",
    "typescript": "^3.9.3",
    "yup": "^0.29.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "spec.(js|ts|tsx)$",
    "globals": {
      "Enzyme": true
    },
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "<rootDir>/reports/unit/"
        }
      ]
    ],
    "coverageReporters": [
      "cobertura",
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "<rootDir>/reports/unit",
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "tests/**/*.{js,ts,tsx}"
    ],
    "collectCoverage": true
  },
  "publishConfig": {
    "@eppendorf:registry": "https://git.dasgip.de/api/v4/projects/3/packages/npm/"
  }
}
